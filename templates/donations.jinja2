{% extends 'base.jinja2' %}

{% block subtitle %}All donations{% endblock subtitle %}

{% block content %}

<div class="card-columns">

    {% if error %}<p>{{ error }}</p>{% endif %}
    {% for donation in donations %}


  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Donation from {{ donation.donor.name }}</h5>
      <p class="card-text">{{ donation.donor.name }} donated {{ donation.value }}.</p>
    </div>
  </div>

  {% endfor %}

</div>


{% endblock content %}


